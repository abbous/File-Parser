extends layouts/_layout.pug

block variables
	- var activePage = 'user-page';
	- var activeGroup = 'pages';

block title
	title User Profile

block content

	.row.user
		.col-md-12
			.profile
				.info
					img.user-img(src="https://s3.amazonaws.com/uifaces/faces/twitter/jsa/128.jpg")
					h4 user name
					p Tech MAnager
				.cover-image

		.col-md-3
			.tile.p-0
				ul.nav.flex-column.nav-tabs.user-tabs
					//li.nav-item
						a.nav-link.active(href='#user-timeline' data-toggle='tab') Timeline
					li.nav-item
						a.nav-link(href='#user-settings' data-toggle='tab') Settings

		.col-md-9
			.tab-content
				#user-settings.tab-pane.fade
					.tile.user-settings
						h4.line-head Settings

						form
							.row.mb-4
								.col-md-4
									label First Name
									input.form-control(type="text")

								.col-md-4
									label Last Name
									input.form-control(type="text")

							.row
								.col-md-8.mb-4
									label Email
									input.form-control(type="text")

								.clearfix

								.col-md-8.mb-4
									label Mobile No
									input.form-control(type="text")

								.clearfix

								.col-md-8.mb-4
									label Office Phone
									input.form-control(type="text")

								.clearfix
								
								.col-md-8.mb-4
									label Home Phone
									input.form-control(type="text")

							.row.mb-10
								.col-md-12
									button.btn.btn-primary(type="button")
										i.fa.fa-fw.fa-lg.fa-check-circle
										|  Save


